@model MediArch.Models.ConsultViewModels.CreateNewConsultModel
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "CreateNewConsult";
    var mid = TempData["MId"];
    var pid = TempData["PId"];
    ApplicationUser user = UserManager.Users.SingleOrDefault(x => x.Id == pid.ToString());
}

<center>
    <h2>CreateNewConsult</h2>
</center>

<center>
    <h4>Create New Consult for @user.Email</h4>
</center>

<hr />
<center>
    <div class="row">
        <div class="col-md-4" style="float:none">

            <form asp-action="CreateNewConsult">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="MedicId" class="form-control" value="@mid" type="hidden" />
                    <span asp-validation-for="MedicId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="PacientId" class="form-control" value="@pid" type="hidden" />
                    <span asp-validation-for="PacientId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConsultResult" class="control-label"></label>
                    <input asp-for="ConsultResult" class="form-control" />
                    <span asp-validation-for="ConsultResult" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Medicines" class="control-label"></label>
                    <input asp-for="Medicines" class="form-control" />
                    <span asp-validation-for="Medicines" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>

        </div>
    </div>
</center>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
