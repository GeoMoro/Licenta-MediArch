@model MediArch.Models.ApplicationUserViewModels.ApplicationUserEditModel

@{
    ViewData["Title"] = "Account - Edit";
}
<div class="General_remake">
    <br />
    <h2>@ViewData["Title"]</h2>
    <hr />
    <div class="row_login">
        <div class="Login_labels">
            <form asp-action="Edit">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <b>FirstName</b>
                    <input asp-for="FirstName" class="input_remake" />
                </div>

                <div class="form-group">
                    <b>LastName</b>
                    <input asp-for="LastName" class="input_remake" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <b>BirthDate</b>
                    <input asp-for="BirthDate" class="input_remake" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <b>Title</b>
                    <input asp-for="Title" class="input_remake" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <b>CabinetAdress</b>
                    <input asp-for="CabinetAdress" class="input_remake" />
                    <span asp-validation-for="CabinetAdress" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <b>PhoneNumber</b>
                    <input asp-for="PhoneNumber" class="input_remake" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="button_remake" />
                </div>

            </form>
        </div>
    </div>

    <div>
        <a asp-action="Users">Go back</a>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
