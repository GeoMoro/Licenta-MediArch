@model IEnumerable<MediArch.Models.ApplicationUser>

@using MediArch.Services.Interfaces
@inject IApplicationUserService service

@{
    ViewData["Title"] = "Users";
}
<center>
    <h2>Users</h2>
</center>

<table class="table" id="UserTable">
    <thead>
        <tr>
            <th>
                <center>
                    <p>Role</p>
                </center>
            </th>
            <th>
                <center>
                    <p>@Html.DisplayNameFor(model => model.Email)</p>
                </center>
            </th>
            <th>
                <center>
                    <p>@Html.DisplayNameFor(model => model.FirstName)</p>
                </center>
            </th>
            <th>
                <center>
                    <p>@Html.DisplayNameFor(model => model.LastName)</p>
                </center>
            </th>
            <th>
                <center>
                    <p>@Html.DisplayNameFor(model => model.BirthDate)</p>
                </center>
            </th>
            <th>
                <center>
                    <p>Age</p>
                </center>
            </th>
            <th>
                <center>
                    <p>@Html.DisplayNameFor(model => model.Title)</p>
                </center>
            </th>
            <th>
                <center>
                    <p>@Html.DisplayNameFor(model => model.CabinetAdress)</p>
                </center>
            </th>

            <th>
                <center>
                    <p>@Html.DisplayNameFor(model => model.PhoneNumber)</p>
                </center>
            </th>

            <th>
                <center>
                    <p>Operations</p>
                </center>
            </th>
        </tr>
    </thead>
    <tbody>
        <!-- User 1, not 0-->
        @foreach (var item in Model)//@service.Get5UsersByIndex(1))
        {
            <tr>
                <td>
                    <center>
                        <p>@service.DetermineUserRole(item.Id).ToString().ToUpper()</p>
                    </center>
                </td>
                <td>
                    <center>
                        <p>@Html.DisplayFor(modelItem => item.Email)</p>
                    </center>
                </td>
                <td>
                    <center>
                        <p>@Html.DisplayFor(modelItem => item.FirstName)</p>
                    </center>
                </td>
                <td>
                    <center>
                        <p>@Html.DisplayFor(modelItem => item.LastName)</p>
                    </center>
                </td>
                <td>
                    <center>
                        <p>@item.BirthDate.Month/@item.BirthDate.Day/@item.BirthDate.Year</p>
                    </center>
                </td>
                <td>
                    <center>
                        <p>@service.GetAgeOfUser(item.Id)</p>
                    </center>
                </td>
                <td>
                    <center>
                        <p>@Html.DisplayFor(modelItem => item.Title)</p>
                    </center>
                </td>
                <td>
                    <center>
                        <p>@Html.DisplayFor(modelItem => item.CabinetAdress)</p>
                    </center>
                </td>
                <td>
                    <center>
                        <p>@Html.DisplayFor(modelItem => item.PhoneNumber)</p>
                    </center>
                </td>

                <td>
                    <center>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <br>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <br>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </center>
                </td>
            </tr>
        }

    </tbody>
</table>
<center>
    @for (int NrOfPage = 1; NrOfPage <= @service.GetNumberOfPagesForAllUsers(); NrOfPage++)
    {
        <input type="button" id="No_Page_@NrOfPage" value="@NrOfPage" />
    }
</center>
<input type="hidden" id="CurrentIdPage" value="1" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
