@model Data.Domain.Entities.Question

@{
    ViewData["Title"] = "Delete";
}

<center>
    <h2>Questions</h2>

    <h3>Are you sure you want to delete this Question?</h3>

    <hr />

    <div>

        <table align="center">
            <thead>
                <tr>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="width: 160px;text-align: center;font-weight: bold;">
                        Created at:
                    </td>
                    <td style="width: 160px; text-align: center;">
                        @Html.DisplayFor(model => model.CreatedDate)
                    </td>
                </tr>
                <tr>
                    <td style="width: 160px;text-align: center;font-weight: bold;">
                        Topic:
                    </td>
                    <td style="width: 160px; text-align: center;">
                        @Html.DisplayFor(model => model.Topic)
                    </td>
                </tr>
                <tr>
                    <td style="width: 160px;text-align: center;font-weight: bold;">
                        Question:
                    </td>
                    <td style="width: 160px; text-align: center;">
                        @Html.DisplayFor(model => model.Text)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <br>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <input type="submit" value="Delete Question" class="btn btn-default" />
        <br>
        <a asp-action="Index">Back to all Questions</a>

    </form>

</center>