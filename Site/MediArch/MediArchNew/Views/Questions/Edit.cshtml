@model Data.Domain.ServiceInterfaces.Models.QuestionViewModels.QuestionEditModel

@{
    ViewData["Title"] = "Edit";
}
<center>

    <h2>Questions</h2>

    <h4>Edit this Question</h4>

    <hr />

    <div class="row" style="margin: auto; width: 50%;">

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="UserId" class="form-control" style="text-align:center" type="hidden">
            </div>

                <div class="form-group">
                    <input asp-for="CreatedDate" class="form-control" style="text-align:center" type="hidden" />
                </div>

                <div class="form-group">
                    <label asp-for="Topic" class="control-label"></label>
                    <input asp-for="Topic" class="form-control" style="text-align:center" />
                    <span asp-validation-for="Topic" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Text" class="control-label"></label>
                    <input asp-for="Text" class="form-control" style="text-align:center" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
</form>
    </div>

    <div>
        <a asp-action="Index">Back to all Questions</a>
    </div>
</center>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}