@model Data.Domain.ServiceInterfaces.Models.QuestionViewModels.QuestionCreateModel

@{
    ViewData["Title"] = "Create";
    var uid = TempData["UId"];
}
<center>

    <h2>Questions</h2>

    <h4>Create a new Question</h4>

    <hr />

</center>

<center>
    <div class="row" style="margin: auto; width: 50%;">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="UserId" class="form-control" value="@uid" type="hidden" style="text-align:center" />
                <span asp-validation-for="UserId" class="text-danger" type="hidden"></span>
            </div>

            <div class="form-group">
                <label asp-for="Topic" class="control-label"></label>
                <input asp-for="Topic" class="form-control" style="text-align:center" />
                <span asp-validation-for="Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" style="text-align:center" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>

    </div>
</center>

<center>
    <div>
        <a asp-action="Index">Back to all Questions</a>
    </div>
</center>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



